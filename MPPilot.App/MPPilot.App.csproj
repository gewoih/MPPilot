    </PackageReference>
	<PackageReference Include="Microsoft.IdentityModel.JsonWebTokens" Version="6.32.1" />
	<PackageReference Include="Microsoft.IdentityModel.Protocols" Version="6.32.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MPPilot.Domain\MPPilot.Domain.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\lib\" />
  </ItemGroup>

