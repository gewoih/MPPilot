@using MPPilot.Domain.Models.Adverts;
@using MPPilot.Domain.Utils;
@using Newtonsoft.Json;
@model IEnumerable<Advert>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<table id="data-table" class="table table-striped table-hover display">
	<thead>
		<tr>
			<th class="filterable">Тип</th>
			<th class="filterable">Название</th>
			<th class="filterable">Фраза</th>
			<th>Арт.</th>
			<th>Статус</th>

			<th>Просмотры</th>
			<th>Клики</th>
			<th>Заказы</th>
			<th>Стоимость заказа (р.)</th>
			<th>Расход (р.)</th>

			<th>CPM</th>
			<th>CTR</th>
			<th>CPC</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr class="edit-button" data-advert="@JsonConvert.SerializeObject(item)">
				<td>@item.Type.GetDescription()</td>
				<td>@item.Name</td>
				<td>@item.Keyword</td>
				<td>@item.ProductArticle</td>
				<td>@item.Status.GetDescription()</td>

				<td>@item.TotalViews</td>
				<td>@item.Clicks</td>
				<td>@item.Orders</td>
				<td>@(item.OrderCost.ToString("F2"))</td>
				<td>@(item.TotalSpent.ToString("F2"))</td>

				<td>@item.CPM</td>
				<td>@item.CTR.ToString("F2")</td>
				<td>@item.CPC.ToString("F2")</td>
			</tr>
		}
	</tbody>
</table>
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalLabel">Настройки рекламной кампании</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<div class="modal-body">
				<ul class="nav nav-tabs">
					<li class="nav-item">
						<a class="nav-link active show" href="#advert" data-bs-toggle="tab">Настройки</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#autobidder" data-bs-toggle="tab">Автобиддер</a>
					</li>
				</ul>

				<div class="tab-content">
					<div class="tab-pane show active" id="advert" role="tabpanel">
						@(await Html.PartialAsync("AdvertSettings"))
					</div>

					<div class="tab-pane" id="autobidder" role="tabpanel">
						@(await Html.PartialAsync("AutobidderSettings"))
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#data-table').DataTable({
				"paging": true,
				"pageLength": 10,
				"ordering": false,
				"searching": true
			});
		});
	</script>

	<script>
		let advert;

		$(".edit-button").click(function () {
			var advertData = $(this).data("advert");
			advertData = JSON.stringify(advertData);
			advert = JSON.parse(advertData);

			if (advert) {
				$("#advertId").val(advert.AdvertId);
				$("#advertNameInput").val(advert.Name);
				$("#advertKeywordInput").val(advert.Keyword);
				$("#advertIsEnabled").prop("checked", advert.IsEnabled);

				var modal = new bootstrap.Modal(document.getElementById("settingsModal"));
				modal.show();
			}
			else {
				alert("Рекламная кампания " + id + " не найдена");
			}
		});
	</script>

	<script>
		$("#saveAdvert").click(function () {
			var status = $("#advertIsEnabled").prop("checked") ? "InProgress" : "Stopped";

			var newAdvert = {
				advertId: advert.AdvertId,
				name: $("#advertNameInput").val(),
				keyword: $("#advertKeywordInput").val(),
				status: status
			};

			$.post("/Adverts/Edit", { oldAdvert: advert, newAdvert: newAdvert }, function (data) {
				if (data.success) {
					location.reload();
				}
				else {
					alert("Ошибка при сохранении данных.");
				}

				var modal = new bootstrap.Modal(document.getElementById("settingsModal"));
				modal.hide();
			});
		});
	</script>
}